# Pulse Configuration

# Backend API Settings
API_HOST=0.0.0.0
API_PORT=8001
DATABASE_URL=postgresql://pulse:pulse_dev_password@localhost:5432/pulse

# Authentication (set to false for production)
DISABLE_AUTH=true
API_KEYS_ADMIN=your-secure-admin-key-here
SECRET_KEY=your-secret-key-change-in-production

# SentinelOne Data Lake Integration
SDL_WRITE_TOKEN=your-sdl-write-token-here

# SDL HEC Batching Configuration
SDL_HEC_BATCH=true
SDL_HEC_BATCH_MAX_BYTES=1048576
SDL_HEC_BATCH_FLUSH_MS=500
SDL_HEC_DEBUG=0

# Development Settings
RELOAD=true
LOG_LEVEL=info

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:4321,http://localhost:3000