---
import AppLayout from '../layouts/AppLayout.astro';
import StatusDashboard from '../components/islands/StatusDashboard.tsx';
import EventGenerator from '../components/islands/EventGenerator.tsx';
---

<AppLayout title="Pulse - Dashboard">
  <div class="max-w-6xl">
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-mauve mb-2">Security Log Generator</h1>
      <p class="text-subtext1 text-lg">Generate synthetic security events for testing and validation</p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <!-- Quick Stats Cards -->
      <div class="bg-surface0 rounded-lg p-6 border border-surface1">
        <h3 class="text-lg font-semibold text-text mb-2">Available Generators</h3>
        <p class="text-3xl font-bold text-green">100+</p>
        <p class="text-subtext1 text-sm">Security event generators</p>
      </div>

      <div class="bg-surface0 rounded-lg p-6 border border-surface1">
        <h3 class="text-lg font-semibold text-text mb-2">Attack Scenarios</h3>
        <p class="text-3xl font-bold text-peach">12</p>
        <p class="text-subtext1 text-sm">Pre-built attack simulations</p>
      </div>

      <div class="bg-surface0 rounded-lg p-6 border border-surface1">
        <h3 class="text-lg font-semibold text-text mb-2">Supported Vendors</h3>
        <p class="text-3xl font-bold text-blue">50+</p>
        <p class="text-subtext1 text-sm">Security product integrations</p>
      </div>
    </div>

    <!-- System Status (React Island) -->
    <StatusDashboard client:load />

    <!-- Quick Actions -->
    <div class="mt-8 bg-surface0 rounded-lg p-6 border border-surface1">
      <h2 class="text-2xl font-semibold text-text mb-4">Quick Actions</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="/generators" class="block p-4 bg-mantle rounded-lg border border-surface1 hover:border-mauve transition-colors group">
          <h3 class="text-lg font-semibold text-mauve group-hover:text-pink">Generate Events</h3>
          <p class="text-subtext1">Create synthetic security logs from 100+ generators</p>
        </a>

        <a href="/scenarios" class="block p-4 bg-mantle rounded-lg border border-surface1 hover:border-mauve transition-colors group">
          <h3 class="text-lg font-semibold text-mauve group-hover:text-pink">Run Scenarios</h3>
          <p class="text-subtext1">Execute multi-phase attack simulations</p>
        </a>

        <a href="/destinations" class="block p-4 bg-mantle rounded-lg border border-surface1 hover:border-mauve transition-colors group">
          <h3 class="text-lg font-semibold text-mauve group-hover:text-pink">Manage Destinations</h3>
          <p class="text-subtext1">Configure HEC and syslog endpoints</p>
        </a>

        <a href="/uploads" class="block p-4 bg-mantle rounded-lg border border-surface1 hover:border-mauve transition-colors group">
          <h3 class="text-lg font-semibold text-mauve group-hover:text-pink">Upload Files</h3>
          <p class="text-subtext1">Process CSV, JSON, and log files</p>
        </a>
      </div>
    </div>

    <!-- Quick Event Generation (React Island) -->
    <div class="mt-8">
      <EventGenerator client:load />
    </div>
  </div>
</AppLayout>
